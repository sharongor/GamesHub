<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.HomeScreen.home_screen_fragment"
    android:background="@drawable/gaming_are_you_ready"
    android:orientation="vertical">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textColor="@color/white"
        android:layout_gravity="end"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="@color/hot_pink"
        android:id="@+id/intro_logout"
        android:onClick="logoutBtn"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:contentPadding="3dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#D4319E6F"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">


        <TextView
            android:id="@+id/home_companies_btn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="15dp"
            android:gravity="center"
            android:text="@string/click_to_see_all_companies_and_more"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:contentPadding="3dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#D3319E6F"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="15dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="@string/click_to_see_all_games"
            android:gravity="center"
            android:id="@+id/home_games_btn"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:contentPadding="3dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#D3319E6F"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="15dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Click to see favourites"
            android:gravity="center"
            android:id="@+id/favourites_btn"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:contentPadding="3dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#D3319E6F"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="15dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Find other users"
            android:gravity="center"
            android:id="@+id/profiles_btn"/>
    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:layout_gravity="bottom|center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:contentPadding="3dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#E631959E"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">


        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/baseline_question_mark_24"
            android:id="@+id/more_info_button"/>


    </androidx.cardview.widget.CardView>



</LinearLayout>